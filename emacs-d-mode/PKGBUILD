  cd "$srcdir/"

  install -m755 -d "$pkgdir/usr/share/emacs/site-lisp"
  install -m644 Emacs-D-Mode-Maintainers-Emacs-D-Mode-9482533/d-mode.el "$pkgdir/usr/share/emacs/site-lisp"
}

