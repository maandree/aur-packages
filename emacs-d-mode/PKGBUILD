pkgname=emacs-d-mode  
pkgver=2.0.5
pkgrel=1 
pkgdesc="Emacs major mode for the D programming language"
url="http://www.wikiservice.at/d/wiki.cgi?EditorSupport/EmacsEditor"
arch=('any')
license=('GPL2')
depends=()
