# Maintainer: Mattias Andr√©e <`base64 -d`(bWFhbmRyZWUK)@member.fsf.org>

pkgname=syncterm
pkgver=0.9.5b
pkgrel=1
epoch=1
pkgdesc="A BBS terminal program"
url="http://syncterm.bbsdev.net"
license='GPL'
depends=('ncurses')
options=(!buildflags)
arch=('i686' 'x86_64')
source=(http://syncterm.bbsdev.net/syncterm-src.tgz)
md5sums=('196d9d144dddb23f2230245d921092f2')


build() {
	cd "$srcdir/syncterm-"*
	cd "src/syncterm/"
	make SRC_ROOT="$(realpath ..)" PREFIX="/usr" || true
}

package() {
	cd "$srcdir/syncterm-"*
	cd "src/syncterm/"
	make SRC_ROOT="$(realpath ..)" PREFIX="$pkgdir/usr" install
}

