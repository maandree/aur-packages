+	sed -i 's/^\.TH NEWSD\.CONF.*$$/\.TH newsd.conf 5/' $@
+	sed -i 's/^\.TH NEWSD.*$$/\.TH newsd 8/' $@
 .pod.z:
 	echo Formatting $@...
 	$(RM) $@ $@.roff $@.tmp $@.tmp.z
