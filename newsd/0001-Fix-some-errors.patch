index 73f5d9f..1e2c1b0 100644
--- a/Makefile
+++ b/Makefile
@@ -105,10 +105,9 @@ MANPAGES	=	newsd.man newsd.$(CAT8EXT) \
 	$(POD2MAN) $< >$@
 .pod.0 .pod.1m .pod.5 .pod.8:
 	echo Formatting $@...
-	$(RM) $@.roff
-	$(POD2MAN) $< >$@.roff
-	$(NROFF) -man $@.roff >$@
-	$(RM) $@.roff
