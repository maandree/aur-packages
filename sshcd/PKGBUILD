pkgname=sshcd
pkgver=1.0.1
pkgrel=1
pkgdesc="ssh command with directory specification support"
arch=(any)
url="https://github.com/christianbundy/sshcd"
license=(MIT)
depends=(openssh bash)
makedepends=()
